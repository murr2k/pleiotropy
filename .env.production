# Production Environment Variables
# Copy this file to .env and update the values

# Database Configuration
DB_PASSWORD=pleiotropy_secure_password_change_me
DB_HOST=postgres
DB_PORT=5432
DB_NAME=pleiotropy_trials

# Redis Configuration
REDIS_PASSWORD=pleiotropy_redis_password_change_me
REDIS_HOST=redis
REDIS_PORT=6379

# API Configuration
SECRET_KEY=your-secret-key-here-change-in-production-use-strong-key
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

# Monitoring
GRAFANA_PASSWORD=pleiotropy_grafana_password_change_me

# SSL Configuration (for production nginx)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Application Settings
ENVIRONMENT=production
LOG_LEVEL=INFO
DEBUG=false

# Swarm Configuration
MAX_AGENTS=10
COORDINATOR_PORT=8080
AGENT_TIMEOUT=300

# Performance Settings
DB_POOL_SIZE=20
REDIS_POOL_SIZE=10
API_WORKERS=4

# Security Settings
ENABLE_CORS=true
ENABLE_HTTPS=true
CSRF_PROTECTION=true